# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

# PHP PSR-2 Coding Standards
# http://www.php-fig.org/psr/psr-2/

root = true

[*]
indent_style = tab
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Indentation override for all JS and CSS
[*.{js,css,vue,sass,scss,less,mjml,html,htm,md}]
indent_style = space
indent_size = 4
end_of_line = lf

[*.php]
indent_style = space
indent_size = 4
end_of_line = lf
