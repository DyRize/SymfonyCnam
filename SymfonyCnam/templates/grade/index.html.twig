{% extends 'base.html.twig' %}

{% block title %}Grade index{% endblock %}

{% block body %}
    <h1>Grade index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Libell√©</th>
                <th>Date</th>
                <th>Valeur</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for grade in grades %}
            <tr>
                <td>{{ grade.id }}</td>
                <td>{{ grade.label }}</td>
                <td>{{ grade.date ? grade.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ grade.value }}</td>
                <td>
                    <a href="{{ path('grade_show', {'id': grade.id}) }}">show</a>
                    <a href="{{ path('grade_edit', {'id': grade.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('grade_new') }}">Create new</a>
{% endblock %}
