{% extends 'base.html.twig' %}

{% block title %}Liste des intervenants{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-sm-12">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Liste des intervenants</h5>
					<div class="table-responsive">
						<table class="table table-hover table-striped text-left">
							<thead class="bg-danger text-white">
							<tr>
								<th>#</th>
								<th>Nom</th>
								<th>Responsable de</th>
								<th>Action</th>
							</tr>
							</thead>
							<tbody>
							{% for teacher in teachers %}
								<tr>
									<td>{{ teacher.id }}</td>
									<td>{{ teacher.relatedUser }}</td>
									<td>{{ teacher.promotions | join(', ') }}</td>
									<td>
										<a href="{{ path('teacher_show', {'id': teacher.id}) }}"><i class="fas fa-eye"></i></a>
										<a href="{{ path('teacher_edit', {'id': teacher.id}) }}"><i class="fas fa-edit"></i></a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="6">Aucune donnée trouvée</td>
								</tr>
							{% endfor %}
							</tbody>
						</table>
					</div>

					<a href="{{ path('teacher_new') }}" class="btn btn-danger margin10">
						Créer un nouvel intervenant
					</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
