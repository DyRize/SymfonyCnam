{% extends 'base.html.twig' %}

{% block title %}{{ teacher.relatedUser }}{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-sm-6 col-md-offset-3">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">{{ teacher.relatedUser }}</h5>
					<div class="table-responsive">
						<table class="table table-hover table-striped text-left">
							<tbody>
							<tr>
								<th>Id</th>
								<td>{{ teacher.id }}</td>
							</tr>
							<tr>
								<th>Nom</th>
								<td>{{ teacher.relatedUser }}</td>
							</tr>
							<tr>
								<th>Responsable de</th>
								<td>{{ teacher.promotions | join(', ')  }}</td>
							</tr>
							<tr>
								<th>Matières enseignées</th>
								<td>{{ teacher.subjects | join(', ') }}</td>
							</tr>
							</tbody>
						</table>
					</div>

					<a href="{{ path('teacher_index') }}" class="btn btn-danger margin10">
						<i class="fas fa-undo"></i>
					</a>

					<a href="{{ path('teacher_edit', {'id': teacher.id}) }}" class="btn btn-danger margin10">
						<i class="fas fa-edit"></i>
					</a>

					{{ include('teacher/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
