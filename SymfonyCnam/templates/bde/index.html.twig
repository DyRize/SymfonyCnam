{% extends 'base.html.twig' %}

{% block title %}Liste des étudiants du BDE{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-sm-12">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Liste des étudiants du BDE</h5>
					<div class="table-responsive">
						<table class="table table-hover table-striped text-left">
							<thead class="bg-danger text-white">
							<tr>
								<th>#</th>
								<th>Nom</th>
								<th>Action</th>
							</tr>
							</thead>
							<tbody>
							{% for bdeMember in bdeMembers %}
								<tr>
									<td>{{ bdeMember.id }}</td>
									<td>{{ bdeMember.firstName }} {{ bdeMember.lastName }}</td>
									<td>
										<a href="{{ path('bde_remove', {'id': bdeMember.id}) }}"><i class="fas fa-trash-alt"></i></a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="6">Aucune donnée trouvée</td>
								</tr>
							{% endfor %}
							</tbody>
						</table>
					</div>

					<a href="#" class="btn btn-danger margin10">
						Ajouter un nouvel étudiant
					</a>
				</div>
			</div>
		</div>
	</div>

	<section id="about" class="padding">
		<div class="container aboutus">
			<div class="row">
				<div class="col-md-7 wow fadeInLeft" data-wow-delay="300ms">
					<h2 class="heading heading_space"><span>Liste des étudiants du </span>BDE <span class="divider-left"></span></h2>
				</div>
			</div>
			<div class="margin10">
				<div class="widget heading_space">
					<h3 class="bottom15">Elèves</h3>
					<table class="table table-hover table-striped text-left">
						<tbody>
						{% for bdeMember in bdeMembers %}
							<tr>
								<td>{{ student }}</td>
								<td align="right">{{ include('student/_delete_form.html.twig') }}</td>
							</tr>
						{% endfor %}
						</tbody>
					</table>
					<div>
						<a class="btn_common btn_border margin10 border_radius">
							Ajouter un élève
						</a>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
