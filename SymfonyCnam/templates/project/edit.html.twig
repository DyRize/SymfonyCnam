	<a href="#project" class="btn btn-danger">Allons y !</a>
{% endblock %}

{% block section %}
	<section id="project">
		<div class="row">
			<div class="col-sm-12">
				<div class="card">
					<div class="card-body">
						<div class="row">
							{{ include('project/_form.html.twig', {'button_label': 'Update'}) }}

							<a href="{{ path('project_index') }}">back to list</a>

							{{ include('project/_delete_form.html.twig') }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
