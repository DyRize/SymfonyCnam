{% extends 'base.html.twig' %}

{% block title %}Liste des projets{% endblock %}

{% block body %}
	<!--Page Header-->
	<section class="page_header padding-top">
		<div class="container">
			<div class="row">
				<div class="col-md-12 page-content">
					<h1>Projets</h1>
					<p>Vous trouvrez ici les projets réalisés par les élèves de la formation</p>
					<br>
					{% if app.user and is_granted("ROLE_SPEAKER") %}
					<div class="page_nav">
						<a class="btn_common btn_border margin10 border_radius" href="{{ path('project_new') }}">
							Créer un projet
						</a>
					</div>
					{% endif %}
				</div>
			</div>
		</div>
	</section>

	<!--ARTICLE INDEX-->
	<section id="blog" class="padding">
		<div class="container">
			<h2 class="hidden">Our Blog</h2>
			<div class="row">
				<div class="col-md-9">
						{% for project in projects %}
								{% include 'project/minimal_view.html.twig'	%}
						{% endfor %}
				</div>
			</div>
		</div>
	</section>
	<!--ARTCILE INDEX-->
{% endblock %}
