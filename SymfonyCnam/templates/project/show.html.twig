{% extends 'base.html.twig' %}

{% block title %}Project {{ project.code }}{% endblock %}

{% block body %}
<div class="row">
	<div class="col-sm-6 col-md-offset-3">
		<div class="card">
			<div class="card-body">
				<h5 class="card-title">Project {{ project.code }}</h5>
				<div class="table-responsive">
					<table class="table table-hover table-striped text-left">
						<tbody>
						<tr>
							<th>Id</th>
							<td>{{ project.id }}</td>
						</tr>
						<tr>
							<th>Code</th>
							<td>{{ project.code }}</td>
						</tr>
						<tr>
							<th>Label</th>
							<td>{{ project.label }}</td>
						</tr>
						<tr>
							<th>StartedAt</th>
							<td>{{ project.startedAt ? project.startedAt|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
						<tr>
							<th>EndedAt</th>
							<td>{{ project.endedAt ? project.endedAt|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
						<tr>
							<th>Students</th>
							<td>{{ project.students|join(', ') }}</td>
						</tr>
						<tr>
							<th>Subjects</th>
							<td>{{ project.subjects|join(', ') }}</td>
						</tr>
						</tbody>
					</table>
				</div>

				<a href="{{ path('project_index') }}" class="btn btn-danger margin10">
					<i class="fas fa-undo"></i>
				</a>

				<a href="{{ path('project_edit', {'id': project.id}) }}" class="btn btn-danger margin10">
					<i class="fas fa-edit"></i>
				</a>

				{{ include('project/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
</div>
{% endblock %}
