{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
	<h1>User index</h1>

	<div class="table-responsive">
		<table class="table table-hover table-striped">
			<thead>
			<tr class="table-danger">
				<th>#</th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Email</th>
				<th>Birth Date</th>
				<th>Phone Number</th>
				<th>Created At</th>
				<th>Last Connexion Date</th>
				<th>Actions</th>
			</tr>
			</thead>
			<tbody>
			{% for user in users %}
				<tr>
					<td><b>{{ user.id }}</b></td>
					<td>{{ user.firstName }}</td>
					<td>{{ user.lastName }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.birthDate ? user.birthDate | date('d/m/Y') : '' }}</td>
					<td>{{ user.phoneNumber }}</td>
					<td>{{ user.createdAt ? user.createdAt | date('d/m/Y à H:i:s') : '' }}</td>
					<td>{{ user.lastConnexionDate ? user.lastConnexionDate | date('d/m/Y à H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('user_show', {'id': user.id}) }}"><span class="badge badge-pill badge-success"><i class="fas fa-eye"></i></span></a>
						<a href="{{ path('user_edit', {'id': user.id}) }}"><span class="badge badge-pill badge-primary"><i class="fas fa-edit"></i></span></a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="10">no records found</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>


	<a type="button" class="btn btn-outline-danger" href="{{ path('user_new') }}">Create new</a>
{% endblock %}
