{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
	<section id="about" class="padding">
		<div class="container aboutus">
			<div class="row">
				<div class="col-md-7 wow fadeInLeft" data-wow-delay="300ms">
					<h2 class="heading heading_space"><span>Liste des </span>utilisateurs <span class="divider-left"></span></h2>
				</div>
			</div>
			<div class="margin10">
				<div class="widget heading_space">
					<table class="table table-hover table-striped text-left">
						<thead>
						<tr>
							<th>#</th>
							<th>Prénom</th>
							<th>Nom</th>
							<th>Email</th>
							<th>Vérifié</th>
							<th>Action</th>
						</tr>
						</thead>
						<tbody>
						{% for user in users %}
							<tr>
								<td>{{ user.id }}</td>
								<td>{{ user.firstName }}</td>
								<td>{{ user.lastName }}</td>
								<td>{{ user.email }}</td>
								<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
								<td>
									<a href="{{ path('user_show', {'id': user.id}) }}"><i class="fas fa-eye"></i> </a>
									<a href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-edit"></i> </a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="12">no records found</td>
							</tr>
						{% endfor %}
						</tbody>
					</table>
					<div class="row" style="column-gap: 10px">
						<a class="btn_common btn_border margin10 border_radius" href="{{ path('user_new') }}">
							Ajouter un utilisateur
						</a>
						<a class="btn_common btn_border margin10 border_radius" href="{{ path('home') }}">
							Retour
						</a>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
