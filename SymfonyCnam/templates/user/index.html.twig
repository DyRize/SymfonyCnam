{% extends 'base.html.twig' %}

{% block title %}User List{% endblock %}

{% block body %}
	<div class="table-responsive mt-5">
		<table class="table table-hover table-striped">
			<thead>
			<tr class="table-danger">
				<th scope="col">#</th>
				<th scope="col">First Name</th>
				<th scope="col">Last Name</th>
				<th scope="col">Email</th>
				<th scope="col">Birth Date</th>
				<th scope="col">Phone Number</th>
				<th scope="col">Created At</th>
				<th scope="col">Last Connexion Date</th>
				<th scope="col">Roles</th>
				<th scope="col">Action</th>
			</tr>
			</thead>
			<tbody>
			{% for user in users %}
				<tr>
					<th scope="row">{{ user.id }}</th>
					<td>{{ user.firstName }}</td>
					<td>{{ user.lastName }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.birthDate | date('d/m/Y') }}</td>
					<td>{{ user.phoneNumber }}</td>
					<td>{{ user.createdAt | date('d/m/Y H:i:s') }}</td>
					<td>{{ user.lastConnexionDate | date('d/m/Y H:i:s') }}</td>
					<td>{{ user.roles | join(', ') }}</td>
					<td>
						<a href="{{ path('user_show', {'id': user.id}) }}"><span class="badge badge-pill badge-success"><i class="fas fa-eye"></i></span></a>
						<a href="{{ path('user_show', {'id': user.id}) }}"><span class="badge badge-pill badge-primary"><i class="fas fa-edit"></i></span></a>
						<a href="{{ path('user_show', {'id': user.id}) }}"><span class="badge badge-pill badge-danger"><i class="fas fa-trash-alt"></i></span></a>
					</td>
				</tr>
			{%  endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
