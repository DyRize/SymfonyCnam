{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
	<section class="articles">

		{% for user in users %}
			<article>
				<h2>{{ user.name }}</h2>
				<div class="content">
					<a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-primary">Voir le profil de cet utilisateur</a>
				</div>
			</article>
		{%  endfor %}
	</section>

{% endblock %}
