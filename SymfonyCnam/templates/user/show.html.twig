{% extends 'base.html.twig' %}

{% block title %}{{ user.firstName }} {{ user.lastName }}{% endblock %}

{% block body %}
	<div class="card border-dark mb-3 mt-5" style="max-width: 20rem;">
		<div class="card-header">Utilisateur n°{{ user.id }}</div>
		<div class="card-body">
			<h4 class="card-title">{{ user.firstName }} {{ user.lastName }}</h4>
			<p class="card-text"><i class="fas fa-at"></i> {{ user.email }}</p>
			<p class="card-text"><i class="fas fa-calendar-alt"></i> Né le {{ user.birthDate | date('d/m/Y') }}</p>
			<p class="card-text"><i class="fas fa-phone"></i> {{ user.phoneNumber}}</p>
			<p class="card-text"><i class="fas fa-calendar-alt"></i> Créé le {{ user.createdAt | date('d/m/Y à H:i:s') }}</p>
			<p class="card-text"><i class="fas fa-calendar-alt"></i> Dernière connexion le {{ user.lastConnexionDate | date('d/m/Y à H:i:s') }}</p>
		</div>
	</div>

	<a href="{{ path('user') }}" class="btn btn-secondary"><i class="fas fa-users"></i> Retourner à la liste des utilisateurs</a>
{% endblock %}
