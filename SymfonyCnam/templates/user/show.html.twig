{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>{{ user.firstName }} {{ user.lastName }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>FirstName</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ user.birthDate ? user.birthDate|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ user.phoneNumber }}</td>
            </tr>
        </tbody>
    </table>
	{% if user.id == app.user.id %}
		<a class="btn btn-danger" href="{{ path('user_password', {'id': user.id}) }}">Reset Password</a>
	{% endif %}
	<a class="btn btn-info" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('user_index') }}">back to list</a>
    	{{ include('user/_delete_form.html.twig') }}
	{% endif %}
{% endblock %}
