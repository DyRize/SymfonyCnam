{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>{{ user.firstName }} {{ user.lastName }}</h1>

	<div class="card border-dark mb-3" style="max-width: 20rem;">
		<div class="card-body">
			<h4 class="card-title">Utilisateur n°{{ user.id }}</h4>
			<p class="card-text"><i class="fas fa-at"></i> {{ user.email }}</p>
			<p class="card-text"><i class="fas fa-calendar-alt"></i> Né le {{ user.birthDate ? user.birthDate | date('d/m/Y') : '' }}</p>
			<p class="card-text"><i class="fas fa-phone"></i> {{ user.phoneNumber}}</p>
			<p class="card-text"><i class="fas fa-calendar-alt"></i> Créé le {{ user.createdAt ? user.createdAt | date('d/m/Y à H:i:s') : '' }}</p>
			<p class="card-text"><i class="fas fa-calendar-alt"></i> Dernière connexion le {{ user.lastConnexionDate ? user.lastConnexionDate | date('d/m/Y à H:i:s') : '' }}</p>
		</div>
	</div>
	<div>
		<div class="row ml-1">
			<a type="button" href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-outline-primary mr-1">Modifier</a>

			{{ include('user/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
