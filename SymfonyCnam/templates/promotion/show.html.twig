{% extends 'base.html.twig' %}

{% block title %}Promotion {{ promotion.code }}{% endblock %}

{% block body %}
<div class="row">
	<div class="col-sm-6 col-md-offset-3">
		<div class="card">
			<div class="card-body">
				<h5 class="card-title">Promotion {{ promotion.code }}</h5>
				<div class="table-responsive">
					<table class="table table-hover table-striped text-left">
						<tbody>
							<tr>
								<th>Id</th>
								<td>{{ promotion.id }}</td>
							</tr>
							<tr>
								<th>Code</th>
								<td>{{ promotion.code }}</td>
							</tr>
							<tr>
								<th>Libellé</th>
								<td>{{ promotion.label }}</td>
							</tr>
							<tr>
								<th>Début</th>
								<td>{{ promotion.startedAt ? promotion.startedAt|date('Y-m-d H:i:s') : '' }}</td>
							</tr>
							<tr>
								<th>Fin</th>
								<td>{{ promotion.endedAt ? promotion.endedAt|date('Y-m-d H:i:s') : '' }}</td>
							</tr>
							<tr>
								<th>Responsable</th>
								<td>{{ promotion.manager }}</td>
							</tr>
						</tbody>
					</table>
				</div>

				<a href="{{ path('promotion_index') }}" class="btn btn-danger margin10">
					<i class="fas fa-undo"></i>
				</a>

				<a href="{{ path('promotion_edit', {'id': promotion.id}) }}" class="btn btn-danger margin10">
					<i class="fas fa-edit"></i>
				</a>

				{{ include('promotion/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
</div>
{% endblock %}
