{% extends 'base.html.twig' %}

{% block title %}Promotion {{ promotion.code }}{% endblock %}

{% block body %}
	<section id="about" class="padding">
		<div class="container aboutus">
			<div class="row">
				<div class="col-md-7 wow fadeInLeft" data-wow-delay="300ms">
					<h2 class="heading heading_space"><span>Promotion </span>{{ promotion.label}} <span class="divider-left"></span></h2>
					<h4 class="bottom25"><strong>Promotion rentrée le : </strong>{{ promotion.startedAt ? promotion.startedAt|date('d-m-Y') : '' }} {% if promotion.endedAt != null %} et diplômée le {{ promotion.endedAt ? promotion.endendAt('d-m-Y') : '' }}{% endif %}</h4>
					<h4 class="bottom25"><strong>Responsable : </strong>{{ promotion.manager}}</h4>
				</div>
			</div>
			<div class="margin10">
				<div class="widget heading_space">
					<h3 class="bottom15">Étudiants</h3>
					<table class="table table-hover table-striped text-left">
						<thead>
						<tr>
							<th>Nom</th>
							<th></th>
						</tr>
						</thead>
						<tbody>
						{% for student in promotion.students %}
						<tr>
							<td align="left">{{ student }}</td>
							<td align="right" width="1em"><a class="fas fa-eye" href="{{ path('student_show',{'id':student.id}) }}"></a></td>
							<td align="right" width="1em"><a class="fas fa-edit" href="{{ path('student_edit',{'id':student.id}) }}"></a></td>
							<td align="right" width="1em">{{ include('student/_delete_form.html.twig') }}</td>
						</tr>
						{% endfor %}
						</tbody>
					</table>
					<div class="row" style="column-gap: 10px">
						<a class="btn_common btn_border margin10 border_radius" href="{{ path('student_new') }}">
							Ajouter un étudiant
						</a>
						<a class="btn_common btn_border margin10 border_radius" href="{{ path('promotion_index') }}">
							Retour
						</a>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
