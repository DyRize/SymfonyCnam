{% extends 'base.html.twig' %}

{% block title %}Liste des promotions{% endblock %}

{% block body %}
<div class="row">
	<div class="col-sm-12">
		<div class="card">
			<div class="card-body">
				<h5 class="card-title">Liste des promotions</h5>
				<div class="table-responsive">
					<table class="table table-hover table-striped text-left">
						<thead class="bg-danger text-white">
							<tr>
								<th>#</th>
								<th>Code</th>
								<th>Libellé</th>
								<th>Début</th>
								<th>Fin</th>
								<th>Responsable</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
						{% for promotion in promotions %}
							<tr>
								<td>{{ promotion.id }}</td>
								<td>{{ promotion.code }}</td>
								<td>{{ promotion.label }}</td>
								<td>{{ promotion.startedAt ? promotion.startedAt|date('Y-m-d H:i:s') : '' }}</td>
								<td>{{ promotion.endedAt ? promotion.endedAt|date('Y-m-d H:i:s') : '' }}</td>
								<td>{{ promotion.manager }}</td>
								<td>
									<a href="{{ path('promotion_show', {'id': promotion.id}) }}"><i class="fas fa-eye"></i></a>
									<a href="{{ path('promotion_edit', {'id': promotion.id}) }}"><i class="fas fa-edit"></i></a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="6">Aucune donnée trouvée</td>
							</tr>
						{% endfor %}
						</tbody>
					</table>
				</div>

				<a href="{{ path('promotion_new') }}" class="btn btn-danger margin10">
						Créer une nouvelle promotion
				</a>
			</div>
		</div>
	</div>
</div>
{% endblock %}
