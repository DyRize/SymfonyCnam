{% extends 'base.html.twig' %}

{% block title %}Promotion index{% endblock %}

{% block body %}
    <h1>Promotion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Label</th>
                <th>StartedAt</th>
                <th>EndedAt</th>
                <th>Manager</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.id }}</td>
                <td>{{ promotion.code }}</td>
                <td>{{ promotion.label }}</td>
                <td>{{ promotion.startedAt ? promotion.startedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ promotion.endedAt ? promotion.endedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ promotion.manager }}</td>
                <td>
                    <a href="{{ path('promotion_show', {'id': promotion.id}) }}">show</a>
                    <a href="{{ path('promotion_edit', {'id': promotion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('promotion_new') }}">Create new</a>
{% endblock %}
