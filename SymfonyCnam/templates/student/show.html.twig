{% extends 'base.html.twig' %}

{% block title %}{{ student.relatedUser }}{% endblock %}

{% block body %}
<div class="row">
	<div class="col-sm-6 col-md-offset-3">
		<div class="card">
			<div class="card-body">
				<h5 class="card-title">{{ student.relatedUser }}</h5>
				<div class="table-responsive">
					<table class="table table-hover table-striped text-left">
						<tbody>
						<tr>
							<th>Id</th>
							<td>{{ student.id }}</td>
						</tr>
						<tr>
							<th>Nom</th>
							<td>{{ student.relatedUser }}</td>
						</tr>
						<tr>
							<th>Promotion</th>
							<td>{{ student.promotion }}</td>
						</tr>
						<tr>
							<th>Matières</th>
							<td>{{ student.subjects | join(', ') }}</td>
						</tr>
						<tr>
							<th>Projets</th>
							<td>{{ student.projects | join(', ') }}</td>
						</tr>
						<tr>
							<th>Arrivé le</th>
							<td>{{ student.arrivedAt ? student.arrivedAt|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
						<tr>
							<th>Diplomé le</th>
							<td>{{ student.graduatedAt ? student.graduatedAt|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
						</tbody>
					</table>
				</div>

				<a href="{{ path('student_index') }}" class="btn btn-danger margin10">
					<i class="fas fa-undo"></i>
				</a>

				<a href="{{ path('student_edit', {'id': student.id}) }}" class="btn btn-danger margin10">
					<i class="fas fa-edit"></i>
				</a>

				{{ include('student/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
</div>
{% endblock %}
