{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
		<tr>
			<th>Id</th>
			<td>{{ student.id }}</td>
		</tr>
		<tr>
			<th>Name</th>
			<td>{{ student.relatedUser }}</td>
		</tr>
		<tr>
			<th>Promotion</th>
			<td>{{ student.promotion }}</td>
		</tr>
		<tr>
			<th>Subjects</th>
			<td>{{ student.subjects | join(', ') }}</td>
		</tr>
		<tr>
			<th>Projects</th>
			<td>{{ student.projects | join(', ') }}</td>
		</tr>
		<tr>
			<th>ArrivedAt</th>
			<td>{{ student.arrivedAt ? student.arrivedAt|date('Y-m-d H:i:s') : '' }}</td>
		</tr>
		<tr>
			<th>GraduatedAt</th>
			<td>{{ student.graduatedAt ? student.graduatedAt|date('Y-m-d H:i:s') : '' }}</td>
		</tr>
        </tbody>
    </table>

    <a href="{{ path('student_index') }}">back to list</a>

    <a href="{{ path('student_edit', {'id': student.id}) }}">edit</a>

    {{ include('student/_delete_form.html.twig') }}
{% endblock %}
