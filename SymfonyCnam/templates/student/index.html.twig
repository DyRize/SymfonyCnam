{% extends 'base.html.twig' %}

{% block title %}Liste des étudiants{% endblock %}

{% block body %}
<div class="row">
	<div class="col-sm-12">
		<div class="card">
			<div class="card-body">
				<h5 class="card-title">Liste des étudiants</h5>
				<div class="table-responsive">
					<table class="table table-hover table-striped text-left">
						<thead class="bg-danger text-white">
							<tr>
								<th>#</th>
								<th>Nom</th>
								<th>Promotion</th>
								<th>Arrivé le</th>
								<th>Diplomé le</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
						{% for student in students %}
							<tr>
								<td>{{ student.id }}</td>
								<td>{{ student.relatedUser }}</td>
								<td>{{ student.promotion }}</td>
								<td>{{ student.arrivedAt ? student.arrivedAt|date('Y-m-d H:i:s') : '' }}</td>
								<td>{{ student.graduatedAt ? student.graduatedAt|date('Y-m-d H:i:s') : '' }}</td>
								<td>
									<a href="{{ path('student_show', {'id': student.id}) }}"><i class="fas fa-eye"></i></a>
									<a href="{{ path('student_edit', {'id': student.id}) }}"><i class="fas fa-edit"></i></a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="6">Aucune donnée trouvée</td>
							</tr>
						{% endfor %}
						</tbody>
					</table>
				</div>
				<a href="{{ path('student_new') }}" class="btn btn-danger margin10">
					Créer un nouvel étudiant
				</a>
			</div>
		</div>
	</div>
</div>
{% endblock %}
