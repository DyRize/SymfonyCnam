{% extends 'base.html.twig' %}

{% block title %}Calendar{% endblock %}

{% block body %}

	<section id="about" class="padding">
		<div class="container aboutus">
			<div class="row">
				<div class="col-md-7 wow fadeInLeft" data-wow-delay="300ms">
					<h2 class="heading heading_space"><span>{{ calendar.title}} </span><span class="divider-left"></span></h2>
					<h5 class="bottom25"><strong>Titre : </strong>{{ calendar.title }}</h5>
					<h5 class="bottom25"><strong>Date de début : </strong>{{ calendar.start ? calendar.start|date('Y-m-d H:i:s') : '' }}</h5>
					<h5 class="bottom25"><strong>Date de fin : </strong>{{ calendar.end ? calendar.end|date('Y-m-d H:i:s') : '' }}</h5>
					<h5 class="bottom25"><strong>Description : </strong>{{ calendar.description }}</h5>
					<h5 class="bottom25"><strong>Toute la journée ? : </strong>{{ calendar.allDay ? 'Oui' : 'Non' }}</h5>
				</div>
			</div>
		</div>
	</section>

	{% if is_granted("ROLE_BDE") or is_granted("ROLE_SPEAKER") %}
		<a href="{{ path('calendar_edit', {'id': calendar.id}) }}">edit</a>
		{{ include('calendar/_delete_form.html.twig') }}
	{% else %}
		<a href="{{ path('calendar_index') }}">Retour</a>
	{% endif %}

{% endblock %}
