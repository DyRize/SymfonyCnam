{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

	<!--Page Header-->
	<section class="page_header padding-top">
		<div class="container">
			<div class="row">
				<div class="col-md-12 page-content">
					<h1>Articles</h1>
					<p>Vous trouverez ici toutes les nouveautés publiées par le CNAM</p>
					<div class="page_nav">
						<a class="btn_common btn_border margin10 border_radius" href="{{ path('article_new') }}">
							Créer un article
						</a>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!--ARTICLE INDEX-->
	<section id="blog" class="padding">
		<div class="container">
			<h2 class="hidden">Notre blog</h2>
			<div class="row">
				<div class="col-md-9">
					{% if role == 'BDE' or role == 'DELEGATE' %}
						{% for lst_article in articles %}
							{% for article in lst_article %}
								{% include 'article/minimal_view.html.twig'	%}
							{% endfor %}
						{% endfor %}
					{% else %}
						{% for article in articles %}
							{% include 'article/minimal_view.html.twig'	%}
						{% endfor %}
					{% endif %}

				</div>
			</div>
		</div>
	</section>
	<!--ARTCILE INDEX-->
{% endblock %}


